        android:id="@+id/txtNamaUserProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:text="Yoseph Indra John Saputra"/>

    <com.moresto.moresto.CustomText.MyCustomText
        android:id="@+id/txtEmailUserProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:text="Indrajohn2@gmail.com"/>
    <com.moresto.moresto.CustomText.MyCustomText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:text="Telepon"/>
    <com.moresto.moresto.CustomText.MyCustomText
        android:id="@+id/txtTelpUserProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:text="085726830822"/>
    <com.moresto.moresto.CustomText.MyCustomText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:text="Bergabung Sejak"/>
    <com.moresto.moresto.CustomText.MyCustomText
        android:id="@+id/txtBirthdayUserProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:textColor="#fff"
