<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:padding="10dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000">
    </RelativeLayout>
    <com.moresto.moresto.CustomText.MyCustomText
        android:id="@+id/noOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Order"/>
    <com.moresto.moresto.CustomText.MyCustomText
        android:id="@+id/waktuOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:textSize="12sp"
        android:text="10-10-2017 10:10:10"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcItemList"
        android:layout_width="match_parent"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

    <com.moresto.moresto.CustomText.MyCustomText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Deliver to"/>

    <com.moresto.moresto.CustomText.MyCustomText
        android:id="@+id/txtTujuanOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:paddingBottom="5dp"
        android:text="Jl. Kramat Raya No. 43 Jakarta"/>
    <Button
        android:id="@+id/btnGoToDetailIncomingOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lihat Detail"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:background="@color/colorGreen"
        android:textColor="#fff"/>
</LinearLayout>