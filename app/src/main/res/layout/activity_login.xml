<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/red_moresto"
    tools:context="com.moresto.moresto.LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20dp"
        android:src="@drawable/logo_putih"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1">
        <com.moresto.moresto.CustomText.MyCustomText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Email Address:"
            android:textColor="#fff" />

        <EditText
            android:id="@+id/txtUsername"
            android:layout_width="258dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="#d78c93"
            android:ems="20"
            android:inputType="textPersonName" />

        <com.moresto.moresto.CustomText.MyCustomText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Password:"
            android:textColor="#fff" />

        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="253dp"
            android:layout_height="40dp"
            android:layout_marginBottom="100dp"
            android:layout_weight="0.13"
            android:background="#d78c93"
            android:ems="20"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/login_button" />

        <com.moresto.moresto.CustomText.MyCustomText
            android:id="@+id/txtLupaPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Forget Password"
            android:textColor="#fff" />
    </LinearLayout>
</LinearLayout>
